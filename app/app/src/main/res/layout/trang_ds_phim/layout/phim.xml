<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgPhim"
        android:layout_width="150dp"
        android:layout_height="210dp"
        app:srcCompat="@drawable/nam"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txtTenPhim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Phim"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="170dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txtNgayKhoiChieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 thg 5 2020"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="170dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txtTimeChieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1giờ 45phút"
        android:textSize="18sp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="100dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txtDoTuoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18+"
        android:textSize="18sp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="170dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/txtDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="170dp"
        android:text="10"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="191dp"
        android:text="đ"
        android:textSize="15sp"/>

</RelativeLayout>
