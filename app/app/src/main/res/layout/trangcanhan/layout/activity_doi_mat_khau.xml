<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".giaodien.ThongTinKhachHang.DoiMatKhauActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar_doimatkhau"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        android:layoutDirection = "rtl"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_doimatkhau"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            app:popupTheme="@style/AppTheme.popUpOverlay">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/toolbar_title_doimatkhau"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:layout_gravity="center"
                    android:text="@string/i_m_t_kh_u"
                    android:textSize="20sp"
                    android:textColor="@android:color/white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/editmatkhauhientai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:autofillHints=""
        android:hint="@string/m_t_kh_u_hi_n_t_i"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editmatkhaumoi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints=""
        android:hint="@string/m_t_kh_u_m_i"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editnhaplaimatkhaumoi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints=""
        android:hint="@string/nh_p_l_i_m_t_kh_u_m_i"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/btndoimatkhau"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:text="@string/thay_i_m_t_kh_u"/>
</androidx.appcompat.widget.LinearLayoutCompat>