<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".giaodien.ThongTinKhachHang.GiaoDich">

    <ImageButton
        android:id="@+id/btnQuayLaiLichSuGiaoDich"
        android:layout_width="92dp"
        android:layout_height="61dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:onClick="QuayLai"
        android:contentDescription="@string/btnquaylailichsugiaodich"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trai_foreground" />

    <TextView
        android:id="@+id/txtlichsugiaodich"
        android:layout_width="315dp"
        android:layout_height="62dp"
        android:gravity="clip_vertical|center_vertical"
        android:text="@string/l_ch_s_giao_d_ch"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toEndOf="@+id/btnQuayLaiLichSuGiaoDich"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txttongchitieu"
        android:layout_width="193dp"
        android:layout_height="31dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="27dp"
        android:text="Tổng Chi Tiêu Năm 2020"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuayLaiLichSuGiaoDich" />

    <TextView
        android:id="@+id/txttongtientrongnam"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="45000"
        android:textColor="#1C1B1B"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txttongchitieu" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Tổng Chi Tiêu Tháng"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/txttongchitieu"
        app:layout_constraintTop_toBottomOf="@+id/txtlichsugiaodich" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="#2C2B2B"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/txttongtientrongnam"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        android:layout_marginTop="120dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtlichsugiaodich">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="421dp"
                android:background="#ADE8AAAA"></ListView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>