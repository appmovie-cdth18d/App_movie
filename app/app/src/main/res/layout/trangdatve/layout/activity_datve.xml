<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".giaodien.DatVeVaThanhToan.DatVeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F1F1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2196f3"
            tools:ignore="MissingConstraints"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="100dp"
                    android:layout_height="58dp"
                    android:background="#2196f3"
                    android:contentDescription="@string/quaylaidatve"
                    app:srcCompat="?attr/homeAsUpIndicator" />

                <TextView
                    android:id="@+id/datve"
                    android:layout_width="100dp"
                    android:layout_height="57dp"
                    android:gravity="center_vertical"
                    android:text="@string/t_v"
                    android:textSize="30sp" />
            </LinearLayout>
        </Toolbar>

        <TextView
            android:id="@+id/dinhdangphim"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/nh_d_ng_phim"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="Thứ 2"
                android:textColor="#E60F0F"
                android:textSize="18sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/th_3"
                android:textColor="#E80D0D"
                android:textSize="18sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#E80D0D"
                android:gravity="center_vertical"
                android:text="@string/th_4"
                android:textSize="18sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:textColor="#E80D0D"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/th_5"
                android:textSize="18sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:textColor="#E80D0D"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/th_6"
                android:textSize="18sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:textColor="#E80D0D"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/th_7"
                android:textSize="18sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:textColor="#E80D0D"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/cn"
                android:textSize="18sp" />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/black"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnngay1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    android:background="@drawable/btn"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btnngay2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/_2"
                    android:background="@drawable/btn"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnngay3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/_3"
                    android:background="@drawable/btn"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnngay4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn"
                    android:text="@string/_4"
                    android:textSize="20sp"
                     />

                <Button
                    android:id="@+id/btnngay5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn"
                    android:text="@string/_5"
                    android:textSize="20sp"
                     />

                <Button
                    android:id="@+id/btnngay6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/_6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnngay7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn"
                    android:layout_marginLeft="10dp"
                    android:text="@string/t7"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnngay8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn"
                    android:layout_marginLeft="10dp"
                    android:text="@string/_8"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btnngay9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="9"
                    android:background="@drawable/btn"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/btnngay10"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/_10"
                    android:background="@drawable/btn"
                    android:textSize="20sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtrapchieuphimkhabanh"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Rạp Chiếu Phim Khá Bảnh"
                android:textStyle="bold"
                android:textSize="20sp"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btngio1"
                            android:layout_width="75dp"
                            android:onClick="ChonGio"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:text="@string/_09_00"/>
                        <Button
                            android:id="@+id/btngio2"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/_09_00"/>
                        <Button
                            android:id="@+id/btngio3"
                            android:layout_width="75dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="50dp"
                            android:text="@string/_09_00"/>
                        <Button
                            android:id="@+id/btngio4"
                            android:layout_width="75dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="50dp"
                            android:text="@string/_09_00"/>
                        <Button
                            android:id="@+id/btngio5"
                            android:layout_width="75dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="50dp"
                            android:text="@string/_09_00"/>
                        <Button
                            android:id="@+id/btngio6"
                            android:layout_marginStart="10dp"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:text="@string/_09_00"/>
                        <Button
                            android:id="@+id/btngio7"
                            android:layout_marginStart="10dp"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:text="@string/_09_00"/>
                    </LinearLayout>
                </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>